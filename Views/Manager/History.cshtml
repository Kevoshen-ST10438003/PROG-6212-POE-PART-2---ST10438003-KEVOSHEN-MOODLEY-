@model IEnumerable<Contract_Monthly_Claim_System_Part2.Models.Claim>
@{
    ViewData["Title"] = "Manager Claim History";
}

<div class="container py-4">
    <h2 class="fw-bold text-center mb-4 text-gradient">
        <i class="fa fa-history me-2"></i>Claim History
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="fa fa-info-circle me-2"></i>No finalized claims yet.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var claim in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card claim-card border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="fw-bold mb-0 text-primary">
                                    <i class="fa fa-file-invoice me-2"></i>Claim #@claim.ClaimID
                                </h5>
                                <span class="badge @(claim.Status == ClaimStatus.Rejected ? "bg-danger" : "bg-success") px-3 py-2 rounded-pill">
                                    <i class="fa @(claim.Status == ClaimStatus.Rejected ? "fa-times-circle" : "fa-check-circle") me-1"></i>@claim.Status
                                </span>
                            </div>

                            <hr class="mt-0 mb-3" />

                            <p><i class="fa fa-user me-2 text-muted"></i><strong>Lecturer:</strong> @claim.LecturerName</p>
                            <p><i class="fa fa-clock me-2 text-muted"></i><strong>Hours:</strong> @claim.HoursWorked</p>
                            <p><i class="fa fa-money-bill me-2 text-muted"></i><strong>Rate:</strong> @claim.HourlyRate.ToString("C")</p>
                            <p><i class="fa fa-calculator me-2 text-muted"></i><strong>Total:</strong> @((claim.HoursWorked * claim.HourlyRate).ToString("C"))</p>

                            @if (claim.Documents != null && claim.Documents.Any())
                            {
                                <div class="mt-3">
                                    <p class="fw-bold mb-1"><i class="fa fa-paperclip me-2 text-secondary"></i>Documents:</p>
                                    @foreach (var doc in claim.Documents)
                                    {
                                        <a asp-action="Download" asp-route-docId="@doc.SupportingDocumentID"
                                           class="btn btn-sm btn-outline-primary w-100 mb-2 d-flex align-items-center justify-content-center">
                                            <i class="fa fa-download me-2"></i>@doc.FileName
                                        </a>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mt-3"><i class="fa fa-ban me-1"></i>No supporting documents.</p>
                            }

                            <hr class="mt-3 mb-2" />
                            <p class="text-muted small text-end">
                                <i class="fa fa-calendar-alt me-1"></i>Submitted: @claim.SubmissionDate.ToShortDateString()
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #eef3f8);
    }

    .text-gradient {
        background: linear-gradient(45deg, #007bff, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .claim-card {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(8px);
        border-radius: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .claim-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

    .btn-outline-primary {
        border-color: #4e73df;
        color: #4e73df;
        transition: all 0.2s ease;
    }

        .btn-outline-primary:hover {
            background-color: #4e73df;
            color: #fff;
            box-shadow: 0 3px 6px rgba(78, 115, 223, 0.3);
        }

    .badge {
        font-size: 0.9rem;
        letter-spacing: 0.3px;
    }

    .fa {
        opacity: 0.85;
    }
</style>
