@model IEnumerable<Contract_Monthly_Claim_System_Part2.Models.Claim>
@{
    ViewData["Title"] = "Pending Claims";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-gradient">
            <i class="fa fa-clipboard-list me-2"></i>PENDING CLAIMS
        </h2>
        <a asp-action="History" class="btn btn-outline-secondary">
            <i class="fa fa-history me-1"></i> View Claim History
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert @TempData["AlertClass"] text-center shadow-sm" role="alert">
            @TempData["Message"]
        </div>
    }

    <div class="row g-4">
        @foreach (var claim in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card claim-card border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3 text-primary">Claim ID: @claim.ClaimID</h5>
                        <p><i class="fa fa-user me-2 text-muted"></i><strong>Lecturer:</strong> @claim.LecturerName</p>
                        <p><i class="fa fa-clock me-2 text-muted"></i><strong>Hours Worked:</strong> @claim.HoursWorked</p>
                        <p><i class="fa fa-money-bill me-2 text-muted"></i><strong>Hourly Rate:</strong> @claim.HourlyRate.ToString("C")</p>
                        <p><i class="fa fa-calculator me-2 text-muted"></i><strong>Total Amount:</strong> @((claim.HoursWorked * claim.HourlyRate).ToString("C"))</p>

                        @if (!string.IsNullOrEmpty(claim.Notes))
                        {
                            <p><i class="fa fa-sticky-note me-2 text-muted"></i><strong>Notes:</strong> @claim.Notes</p>
                        }

                        <div class="mt-3">
                            <p class="fw-bold mb-1"><i class="fa fa-paperclip me-2 text-secondary"></i>Documents:</p>
                            @if (claim.Documents != null && claim.Documents.Any())
                            {
                                @foreach (var doc in claim.Documents)
                                {
                                    <a asp-action="Download" asp-route-docId="@doc.SupportingDocumentID"
                                       class="btn btn-sm btn-outline-primary w-100 mb-2 d-flex align-items-center justify-content-center">
                                        <i class="fa fa-download me-2"></i>@doc.FileName
                                    </a>
                                }
                            }
                            else
                            {
                                <p class="text-muted"><i class="fa fa-ban me-1"></i>No documents uploaded.</p>
                            }
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="Review" asp-route-id="@claim.ClaimID" class="btn btn-outline-success">
                                <i class="fa fa-check me-1"></i> Verify
                            </a>
                            <a asp-action="Review" asp-route-id="@claim.ClaimID" class="btn btn-outline-danger">
                                <i class="fa fa-times me-1"></i> Reject
                            </a>
                        </div>
                    </div>
                    <div class="card-footer text-muted small text-end">
                        Submitted: @claim.SubmissionDate.ToShortDateString()
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #eef3f8);
    }

    .text-gradient {
        background: linear-gradient(45deg, #007bff, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .claim-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(8px);
        border-radius: 1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .claim-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

    .btn-outline-primary {
        border-color: #4e73df;
        color: #4e73df;
        transition: all 0.2s ease;
    }

        .btn-outline-primary:hover {
            background-color: #4e73df;
            color: #fff;
            box-shadow: 0 3px 6px rgba(78, 115, 223, 0.3);
        }

    .badge {
        font-size: 0.9rem;
        letter-spacing: 0.3px;
    }

    .fa {
        opacity: 0.85;
    }
</style>
