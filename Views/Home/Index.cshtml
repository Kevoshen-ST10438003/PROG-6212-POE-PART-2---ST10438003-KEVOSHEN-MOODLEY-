@{
    ViewData["Title"] = "Welcome";
}

<style>
    /* 🌈 Hero background animation */
    .hero-section {
        height: 100vh;
        background: linear-gradient(135deg, #1d4ed8, #2563eb, #38bdf8);
        background-size: 400% 400%;
        animation: gradientShift 8s ease infinite;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    @@keyframes gradientShift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    /* ✨ Fade-in animation for content */
    .content-container {
        animation: fadeInUp 1.5s ease;
        max-width: 900px;
        padding: 20px;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* 🌟 Glowing text */
    .glow-text {
        text-shadow: 0 0 25px rgba(255, 255, 255, 0.8), 0 0 50px rgba(255, 255, 255, 0.5);
        letter-spacing: 3px;
        font-weight: bold;
    }

    /* 🪄 Logo styling */
    .cmcs-logo {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        background: white;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.6);
        margin-bottom: 25px;
        animation: float 4s ease-in-out infinite;
    }

        .cmcs-logo i {
            font-size: 80px;
            color: #2563eb;
        }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-15px);
        }
    }

    /* 🔘 Button styling */
    .btn-light {
        background-color: white;
        color: #2563eb;
        border: none;
        font-weight: bold;
        padding: 12px 28px;
        border-radius: 50px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        margin-top: 20px;
    }

        .btn-light:hover {
            background-color: #f8fafc;
            transform: scale(1.08);
            box-shadow: 0 4px 12px rgba(255, 255, 255, 0.4);
        }

    /* 🌍 Footer style */
    .footer {
        position: absolute;
        bottom: 15px;
        color: rgba(255,255,255,0.8);
        font-size: 0.9rem;
    }
</style>

<div class="hero-section">
    <!-- 🪄 Floating Logo -->
    <div class="cmcs-logo">
        <i class="fa fa-file-invoice-dollar"></i>
    </div>

    <!-- 💬 Hero Text -->
    <div class="content-container">
        <h1 class="display-3 glow-text">CONTRACT MONTHLY CLAIM SYSTEM</h1>
        <p class="lead mt-3">Simplifying claim submissions, reviews, and approvals — all in one secure place.</p>

        <a href="/Lecturer/Dashboard" class="btn btn-light mt-4">
            <i class="fa fa-arrow-right me-2"></i> Get Started
        </a>
    </div>

    <div class="footer">
        <p>© 2025 CMCS Prototype | Developed by Team SmartCode</p>
    </div>
</div>
